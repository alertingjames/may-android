<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_branch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    tools:context="bookclub.technion.maymsgphoto.main.BranchActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#417f71"
                android:orientation="horizontal">
                <bookclub.technion.maymsgphoto.widgets.FontableTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:text="What do you want to do?"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="visible"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:padding="12dp"
                    app:font="ag-futura-58e274b5588ad.ttf"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:text="Logout"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:layout_gravity="right|bottom"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/logo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@mipmap/may123"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:padding="20dp"
                android:visibility="gone"/>
            <LinearLayout
                android:id="@+id/buttonPage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_gravity="center"
                android:gravity="center">
                <FrameLayout
                    android:id="@+id/talkframe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/talk"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:background="@drawable/select_round_rect"
                        android:text="Good Talking"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:textSize="25sp"
                        android:drawableLeft="@drawable/messages"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_gravity="center"/>
                    <FrameLayout
                        android:id="@+id/badgeset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="110dp">
                        <ImageView
                            android:id="@+id/badge"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:visibility="visible"
                            android:background="@drawable/circle2"/>
                        <TextView
                            android:id="@+id/num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:visibility="visible"
                            android:textSize="13sp"
                            android:layout_gravity="center"
                            android:textColor="#faff02"/>
                    </FrameLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/photo"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:background="@drawable/select_round_rect"
                    android:text="Selfie-Photo"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:textColor="#fff"
                    android:drawableLeft="@drawable/cameraicon"
                    android:textSize="25sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
        <com.cunoraz.gifview.library.GifView
            android:id="@+id/gif"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:visibility="gone"
            custom:gif="@drawable/preload"/>
        <View
            android:id="@+id/background"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#02a6ff"/>
        <bookclub.technion.maymsgphoto.widgets.FontableTextView
            android:id="@+id/welcometext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello there, Gorgeous!"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#0266b3"
            android:visibility="gone"
            android:background="@drawable/gradient_fill"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="center"
            app:font="monotype-corsiva-58e26af1803c5.ttf"/>
    </FrameLayout>
</LinearLayout>
