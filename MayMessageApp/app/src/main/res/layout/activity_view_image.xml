<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:id="@+id/editFrame"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/imageFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/frame1">
                <ImageView
                    android:id="@+id/imageViewEdit"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:layout_width="fill_parent"
                    android:src="@drawable/background"
                    android:layout_height="fill_parent" />
                <bookclub.technion.maymsgphoto.widgets.FontableTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#ff02ca"
                    android:singleLine="false"
                    android:padding="10dp"
                    android:minLines="10"
                    android:visibility="gone"
                    android:layout_gravity="bottom|center_horizontal"
                    android:id="@+id/commentImage"
                    app:font="monotype-corsiva-58e26af1803c5.ttf"/>
                <LinearLayout
                    android:id="@+id/editTextFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:minWidth="150dp"
                    android:background="@drawable/light_blue_fill_round"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/topBar"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/editCancel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:background="@drawable/select_round_rect"
                            android:padding="5dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:id="@+id/editSetting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Setting"
                            android:visibility="gone"
                            android:background="@drawable/select_round_rect"
                            android:padding="5dp"
                            android:layout_marginLeft="8dp"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drag"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <bookclub.technion.maymsgphoto.widgets.FontableTextView
                            android:id="@+id/textArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="#ff0289"
                            android:padding="10dp"
                            app:font="monotype-corsiva-58e26af1803c5.ttf"/>
                        <EditText
                            android:id="@+id/editArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="#ff0289"
                            android:imeOptions="actionNext"
                            android:minLines="2"
                            android:padding="10dp"
                            android:hint="Write something..."
                            android:background="@drawable/green_strokerect"
                            android:gravity="start"/>
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/bottomBar"
                        android:gravity="right">
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Drag"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#fff"/>
                        <TextView
                            android:layout_width="0px"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/editDone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Done"
                            android:background="@drawable/select_round_rect"
                            android:padding="5dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#fff"/>
                        <TextView
                            android:id="@+id/save"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:visibility="gone"
                            android:background="@drawable/select_round_rect"
                            android:padding="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="#fff"/>
                    </LinearLayout>
                </LinearLayout>
                <bookclub.technion.maymsgphoto.widgets.FontableTextView
                    android:id="@+id/datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="110dp"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    app:font="ag-futura-58e274b5588ad.ttf"/>
                <bookclub.technion.maymsgphoto.utils.CircularImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/logo1"
                    android:visibility="visible"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="50dp"
                    android:layout_gravity="bottom"/>
                <bookclub.technion.maymsgphoto.utils.CircularImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/logo2"
                    android:visibility="visible"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="50dp"
                    android:layout_gravity="bottom|right"/>
                <TextView
                    android:id="@+id/webLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp"
                    android:textSize="16sp"
                    android:textColor="#fff"
                    android:padding="10dp"
                     />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom|center">
            <TextView
                android:id="@+id/rotateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera_select_frame"
                android:padding="10dp"
                android:visibility="gone"
                android:drawableLeft="@drawable/reload"
                android:gravity="center" />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                android:background="@drawable/thin_forward"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/editImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera_select_frame"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_marginLeft="3dp"
                android:drawableLeft="@drawable/edit1"
                android:gravity="center" />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                android:background="@drawable/thin_forward"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/commentButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera_select_frame"
                android:padding="10dp"
                android:visibility="gone"
                android:drawableLeft="@drawable/edit"
                android:layout_marginLeft="3dp"
                android:gravity="center" />
            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="3dp"
                android:visibility="gone"
                android:background="@drawable/thin_forward"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:id="@+id/lockButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera_select_frame"
                android:padding="10dp"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="5dp"
                android:text="CASTLE / SHARE"
                android:gravity="center"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/galleryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_fillrect"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawableTop="@drawable/gallery"
            android:drawablePadding="5dp"
            android:text="Gallery"
            android:textColor="#fff"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="11sp"/>

        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/back3"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>
        <ScrollView
            android:id="@+id/commentFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:background="@drawable/light_blue_fill_round"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:gravity="center">
                <EditText
                    android:id="@+id/comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:background="#fff"
                    android:padding="10dp"
                    android:minLines="3"
                    android:imeOptions="actionNext"
                    android:textColor="#ae000000"
                    android:singleLine="false"
                    android:textSize="18sp"
                    android:hint="Please write something you want..."/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="20dp"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:background="@drawable/green_fillround"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="Cancel"/>
                    <TextView
                        android:id="@+id/ok"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="10dp"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:background="@drawable/green_fillround"
                        android:textColor="#fff"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:text="Ok"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/myScreen"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/white_fillrect"
            android:layout_gravity="center">
            <bookclub.technion.maymsgphoto.widgets.FontableTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:id="@+id/fontSample"
                android:textSize="20sp"
                app:font="monotype-corsiva-58e26af1803c5.ttf"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#ff022b"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="255"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:textColor="#ff022b"/>
            </LinearLayout>
            <SeekBar
                android:id="@+id/mySeekingBar_R"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="G"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2dcf02"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="255"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:textColor="#2dcf02"/>
            </LinearLayout>
            <SeekBar
                android:id="@+id/mySeekingBar_G"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#02abf9"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="255"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:textColor="#02abf9"/>
            </LinearLayout>
            <SeekBar
                android:id="@+id/mySeekingBar_B"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="255"
                android:progress="0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Font size"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="#ca0126a1"/>
                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:textColor="#ff02d9"/>
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30sp"
                    android:textSize="15sp"
                    android:layout_marginRight="10dp"
                    android:textColor="#020d84"/>
            </LinearLayout>
            <SeekBar
                android:id="@+id/mySeekingBar_Size"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:max="30"
                android:progress="10"/>
            <TextView
                android:id="@+id/set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set"
                android:layout_marginTop="8dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/blue_fill_white_stroke"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/share_lock_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center">
            <ImageView
                android:id="@+id/lock"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/select_round_rect"
                android:src="@drawable/castle"
                android:visibility="gone"
                android:padding="15dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/share"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/select_round_rect"
                android:src="@drawable/sharebutton"
                android:textSize="25sp"
                android:padding="15dp"
                android:visibility="gone"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sharebuttonBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="120dp"
            android:visibility="gone"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:id="@+id/facebooksharebutton"
                android:background="@drawable/facebookicon"/>
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:id="@+id/linkedinsharebutton"
                android:background="@drawable/linkedinicon"/>
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:id="@+id/twittersharebutton"
                android:background="@drawable/twittericon"/>
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="gone"
                android:id="@+id/instagrambutton"
                android:background="@drawable/instagramicon"/>
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:visibility="gone"
                android:id="@+id/googleButton"
                android:background="@drawable/googleplusicon"/>
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imageView"
                    android:adjustViewBounds="true"
                    android:layout_centerInParent="true"
                    android:layout_width="fill_parent"
                    android:src="@drawable/background"
                    android:layout_height="fill_parent" />
            </FrameLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/exitViewImageButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/back3"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="11sp"
            android:padding="3dp"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/camera_button_fill_round"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here to replace\nwith photos Taken\nOutside May"
            android:textSize="11sp"
            android:padding="3dp"
            android:layout_gravity="right"
            android:layout_marginTop="66dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:background="@drawable/camera_button_fill_round"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/galleryButton0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_fillrect"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:drawableTop="@drawable/gallery"
            android:drawablePadding="5dp"
            android:text="Gallery"
            android:textColor="#fff"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="11sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit this Photo"
            android:textSize="11sp"
            android:padding="3dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="55dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/camera_button_fill_round"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="11sp"
            android:padding="3dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="55dp"
            android:background="@drawable/camera_button_fill_round"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share Picture"
            android:textSize="11sp"
            android:padding="3dp"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="55dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/camera_button_fill_round"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"
            android:gravity="bottom|center">

            <TextView
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera_select_frame"
                android:padding="10dp"
                android:drawableLeft="@drawable/edit1"
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/deleteImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/camera_select_frame"
