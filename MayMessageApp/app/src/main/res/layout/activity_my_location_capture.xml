<?xml version="1.0" encoding="utf-8"?>
<bookclub.technion.maymsgphoto.classes.MapWrapperLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/map_relative_layout"
    android:orientation="vertical"
    tools:context=".main.MyLocationCaptureActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="visible"
            android:background="@drawable/green_strokerect"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="10dp"
            >
            <EditText
                android:id="@+id/edt_search"
                android:layout_width="0px"
                android:layout_weight="7"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:textColor="#000"
                android:textColorHint="#adadad"
                android:paddingLeft="5dp"
                android:hint="Search (input address)"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:inputType="textCapWords"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@null"/>
            <LinearLayout
                android:id="@+id/lyt_search"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/green_fillrect"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:padding="3dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/search1"
                    android:padding="2dp"
                    android:id="@+id/imageView3" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lyt_speech"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/green_fillrect"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:padding="3dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/audio"
                    android:padding="2dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="16sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:drawableRight="@drawable/thin_forward"
            android:drawablePadding="5dp"
            android:background="@drawable/green_fillrect"
            android:padding="8dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_marginTop="130dp"/>
        <LinearLayout
            android:id="@+id/showInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="right"
            android:background="@drawable/green_fillrect">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/show2"
                android:padding="3dp"
                />
        </LinearLayout>
    </FrameLayout>


</bookclub.technion.maymsgphoto.classes.MapWrapperLayout>
