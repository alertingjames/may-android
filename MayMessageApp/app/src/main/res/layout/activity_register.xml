<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fundo"
    tools:context="bookclub.technion.maymsgphoto.main.RegisterActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#18000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@mipmap/may123"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:scaleType="centerCrop"
                android:padding="20dp"
                />
            <bookclub.technion.maymsgphoto.widgets.FontableTextView
                android:id="@+id/explaination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                app:font="ag-futura-58e274b5588ad.ttf"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:id="@+id/lytfacebook"
                    android:background="@drawable/facebook_fillrect"
                    >
                    <ImageView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:layout_margin="2dp"
                        android:src="@drawable/facebook"/>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#fff"/>
                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:text="Login with Facebook"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingLeft="35dp"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>
                <com.facebook.login.widget.LoginButton
                    android:visibility="gone"
                    android:id="@+id/login_button"
                    android:layout_width="320dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    />

            </FrameLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
